#!/usr/bin/env bash
#    sh not bash for mingw
# run this in the directory where everything will be built
# first param is mpir directory

if [ $# -eq 1 ] ; then
	# lauched by user so add in nice
	nice > /dev/null 2>&1	
	RET=$?
	ionice > /dev/null 2>&1
	if [ $? -eq 0 -a $RET -eq 0 ] ; then
		echo "NICING"
		exec nice ionice -c2 -n7 $0 NICED $*
	else
		exec $0 NICED $*
	fi
fi
if [ $# -ne 2 ] ; then
	echo "Usage: $0 mpir_directory"
	exit 1
fi
if [ ! $1 = "NICED" ] ; then
	echo "ERROR"
	exit 1
fi
shift

ABIN=
ABIC=
if [ $(basename $0) = "mpirtest32" ] ; then
	echo "USING 32 bit ABI"
	ABIN="ABI=32"
	ABIC="ABI=32"
fi
SUCCESS=""
HACK="echo 0"
HACK2="echo 0"
TLD=""
DIR=$(pwd)
if [ $# -eq 1 ] ; then 
	# get absolute directory
	REL=$(echo $1 | cut -b 1)
	if [ $REL = "/" ] ; then
		DIR=$1
		# if mingw then abort
		if [ $($DIR/config.guess | cut -f 3 -d -) = "mingw32" ] ; then
			echo "ERROR mingw doesn't like absolute paths"
			exit 1
		fi
	else
	       DIR=$(pwd)/$1
	       RDIR=$1
	fi
fi

# dont want to run yacc
#touch $DIR/demos/calc/*.c $DIR/demos/calc/*.h

SYSNAME=$(uname -n)
if [ -e $SYSNAME ] ; then echo "ERROR directory $SYSNAME allready exist" ; exit 1 ; fi

CPUS=1
COMP="gcc"
if [ -f /proc/cpuinfo ] ; then
	CPUS=$(cat /proc/cpuinfo  | grep -ce ^processor)
fi
if [ $SYSNAME = "mark" ] ; then
	CPUS=2
	COMP="gcc cc"
	TCFLAGS=-O1
	TCXXFLAGS=-O1
	# only really need the flags for cc
fi
if [ $SYSNAME = "BOX1-WIN32" ] ; then
	CPUS=8
	# mingw cant detect cpus
fi
if [ $SYSNAME = "mark2" ] ; then
	CPUS=2
	COMP="gcc cc"
	TCFLAGS=-O1
	TCXXFLAGS=-O1
fi
if [ $SYSNAME = "sage.math.washington.edu" ] ; then
	COMP="gcc gcc-3.4"
	# gcc-4.1 exists but g++-4.1 DNE
	# gcc-3.4 works with 32bit abi
	# gcc works with 32bit ABI but g++ does not
fi
if [ $SYSNAME = "t2" ] ; then
	CPUS=128
	if [ ! $ABIC = "" ] ; then
		ABIC="ABI=long"		# for backward compat even though long is 64 bit
	fi
fi
if [ $SYSNAME = "varro" ] ; then
	CPUS=2
	COMP="gcc gcc-3.3"
	if [ ! $ABIC = "" ] ; then
		ABIC="ABI=long"		# for backward compat even though long is 64 bit
	fi
fi
if [ $SYSNAME = "cicero" ] ; then
	COMP="gcc cc"
fi
if [ $SYSNAME = "fulvia" ] ; then
	CPUS=4
	COMP="cc gcc"
	# cc broken at the mo ?
	TCFLAGS=-m64
	TCXXFLAGS=-m64
fi
if [ $SYSNAME = "eno" ] ; then
	COMP="gcc cc"
fi
if [ $SYSNAME = "iras" ] ; then
	COMP="gcc cc icc"
fi
if [ $SYSNAME = "cleo" ] ; then
	COMP="gcc cc icc"
fi
if [ $SYSNAME = "sextus" ] ; then
	COMP="gcc cc"
fi
if [ $SYSNAME = "lena" ] ; then
	COMP="gcc cc"
	# also has gcc34 but g++34 DNE 
	# cc is NOT 32bit
	# gcc is 32bit but g++ is not
fi
if [ $SYSNAME = "flavius" ] ; then
	COMP="gcc cc"
	# gcc34 is ok but g++34 DNE
fi
if [ $SYSNAME = "taurus" ] ; then
	COMP="gcc cc"
fi
echo "Using $CPUS cpus"

FATCPU="x86_64\ni486\npentium\npentiummmx\npentiumpro\npentium2\npentium3\ncore\ncore2\npenryn\nnehalem\natom\nnetburst\nnetburtslahf\npentium4\nprescott\nk5\nk6\nk62\nk63\nk7\nk8\nk10\nviac3\nviac32\nnano\nk102"
FAT=0
SYS=$($DIR/config.guess | cut -f 1 -d -)
if [ $(echo -e $FATCPU | grep -c ^${SYS}\$) = "1" ] ; then FAT=1 ; echo "Using FAT" ; fi

SYS=none-$($DIR/config.guess | cut -f 2- -d -)

BUILDSHARED=0
if [ $($DIR/config.guess | cut -f 3 -d -) = "cygwin" ] ; then
	HACK2="cd yasm ; make"
	# as yasm in cygwin doesn't like paralell builds
	BUILDSHARED=1
	COMP="gcc gcc-4"
fi

CONFIG=$DIR/configure
SHE=`which bash`

if [ $($DIR/config.guess | cut -f 3 -d -) = "mingw32" ] ; then
	CONFIG=../$RDIR/configure
	# mingw doest like configure run with an absolute path
	SHE=/bin/sh
fi

function build {
echo -e "\n\n\nTrying $1 $2 $3\n\n\n"
mkdir $SYSNAME && cd $SYSNAME && export CC=$1 && export CXX=$2 && $CONFIG $3 && $SHE -c "$HACK2" && make -j $CPUS && $SHE -c "$HACK" && \
	make -j $CPUS check && cd .. && rm -rf $SYSNAME
if [ $? -ne 0 ] ; then echo -e "${SYSNAME}\n${SUCCESS}\nFAILED CC=$1 CXX=$2 configure=$3" ; exit 1 ; fi
SUCCESS=$(echo -e "${SUCCESS}\nPASSED CC=$1 CXX=$2 configure=$3")
}

for C in $COMP
do
	CX=$(echo $C | sed s/cc/c++/ | sed s/gc++/g++/ | sed s/ic++/g++/)
	if [ $(uname) = "SunOS" ] ; then
		CX=$(echo $CX | sed s/c++/CC/)
	fi
	if [ $C = "cc" ] ; then
		if [ -n $TLD ] ; then
			export LD=$TLD
		fi
		# it would be nice if we set this back on exit
	fi
	# standard build
	build $C $CX "$ABIN"
	# all features
	build $C $CX "$ABIN --enable-cxx --enable-gmpcompat"
	# all features and debug
	build $C $CX "$ABIN --enable-cxx --enable-gmpcompat --enable-assert --enable-alloca=debug"
	# maximum debug
	export CFLAGS=$TCFLAGS
	export CXXFLAGS=$TCXXFLAGS
	build $C $CX "$ABIC --enable-cxx --enable-gmpcompat --enable-assert --enable-alloca=debug --build=$SYS"
	unset CFLAGS
	unset CXXFLAGS
	if [ $FAT -eq 1 ] ; then
		# standard build
		build $C $CX "$ABIN --enable-fat"
		# all features
		build $C $CX "$ABIN --enable-fat --enable-cxx --enable-gmpcompat"
		# all features and debug
		build $C $CX "$ABIN --enable-fat --enable-cxx --enable-gmpcompat --enable-assert --enable-alloca=debug"
	fi
	if [ $BUILDSHARED -eq 1 ] ; then
		#standard build
		build $C $CX "$ABIN --enable-shared --disable-static"
		# all features
		build $C $CX "$ABIN --enable-shared --disable-static --enable-cxx --enable-gmpcompat"
		# all features and debug
		build $C $CX "$ABIN --enable-shared --disable-static --enable-cxx --enable-gmpcompat --enable-assert --enable-alloca=debug"
		if [ $FAT -eq 1 ] ; then
			# standard build
			build $C $CX "$ABIN --enable-shared --disable-static --enable-fat"
			# all features
			build $C $CX "$ABIN --enable-shared --disable-static --enable-fat --enable-cxx --enable-gmpcompat"
			# all features and debug
			build $C $CX "$ABIN --enable-shared --disable-static --enable-fat --enable-cxx --enable-gmpcompat --enable-assert --enable-alloca=debug"
		fi
	fi
done
echo 
echo
uname -a
${DIR}/config.guess
for C in $COMP
do
	echo "Compiler $C is "
	$C -v
	echo
done
echo -e "${SYSNAME}\n$SUCCESS"
# try build try , tune ,speed etc

